<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_CENTER" prefHeight="410.0" prefWidth="417.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab36.StateController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TilePane alignment="CENTER" prefHeight="270.0" prefWidth="402.0">
        <ImageView fx:id="imageView" fitHeight="271.0" fitWidth="393.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@img/sleep.png" />
        </ImageView>
    </TilePane>
    <HBox alignment="TOP_CENTER" minHeight="40.0" minWidth="70.0" prefHeight="40.0" prefWidth="200.0">
        <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </opaqueInsets>
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" top="10.0"/>
        </padding>
        <Button mnemonicParsing="false" onMouseClicked="#semesterClick" prefHeight="26.0" prefWidth="105.0"
                text="Семестр" textFill="#8e1c87">
        <HBox.margin>
            <Insets right="10.0"/>
        </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onMouseClicked="#sessionClick" prefHeight="26.0" prefWidth="105.0" text="Сессия"
                textFill="#6b2a2a">
        <HBox.margin>
            <Insets right="10.0"/>
        </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onMouseClicked="#holidaysClick" prefHeight="26.0" prefWidth="105.0"
                text="Каникулы" textFill="#ff5500">
        <HBox.margin>
            <Insets right="10.0"/>
        </HBox.margin>
        </Button>
    </HBox>
</VBox>
